<!-- updateProfilUser.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Mise à jour du profil</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Mettre à jour votre profil</h1>
    <form action="/update-profile-user" method="POST">
        <label>Nom :</label>
        <input type="text" name="newlastname" value="<%= user.lastname %>" required><br>

        <label>Prénom :</label>
        <input type="text" name="newfirsname" value="<%= user.firsname %>" required><br>

        <label>Téléphone :</label>
        <input type="text" name="newphone" value="<%= user.phone %>"><br>

        <label>Date de naissance :</label>
        <input type="date" name="newbirsdays" value="<%= user.birsdays %>"><br>

        <label>Adresse :</label>
        <input type="text" name="newaddress" value="<%= user.address %>"><br>

        <button type="submit">Mettre à jour</button>
    </form>

    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
</body>
</html>
